<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="../../vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         beStrictAboutTestsThatDoNotTestAnything="true"
>
    <testsuites>
        <testsuite name="Flinnt Core Package Test Cases">
            <directory>./tests/Flinnt/Core/DBLog</directory>
            <!--<directory>./tests/Flinnt/Core/Cache</directory>-->
            <!--<directory>./tests/Flinnt/Core/Mail</directory>-->
            <!--<directory>./tests/Flinnt/Core/Queue</directory>-->
            <!--<directory>./tests/Flinnt/Core/SMS</directory>-->
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_DRIVER" value="sync"/>
    </php>
</phpunit>
